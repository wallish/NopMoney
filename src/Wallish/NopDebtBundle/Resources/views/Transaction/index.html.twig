{% extends '::base.html.twig' %}

{% block body -%}
    <h3>Mon compte</h3>

<div class="col s12" style="width:50%">
    <a  href="{{ path('transaction_new') }}"><i ></i></a>
    <table >
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Libell√©</th>
                <th>Montant</th>
                <th>Hash</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td><a href="{{ path('transaction_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.amount }}</td>
                <td>{{ entity.hash }}</td>
                <td>
                        <a href="{{ path('transaction_show', { 'id': entity.id }) }}"> Afficher</a>
                        <a href="{{ path('transaction_edit', { 'id': entity.id }) }}"> Modifier</a>
                         <a href="{{ path('transaction_delete', { 'id': entity.id }) }}"> Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

</div>
    {% endblock %}

